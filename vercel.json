{
  "version": 2,
  "cacheControl": {
    "default": {
      "maxAge": 60,
      "staleWhileRevalidate": 3600,
      "sMaxAge": 3600
    },
    "byPath": {
      "/": {
        "maxAge": 3600,
        "staleWhileRevalidate": 86400,
        "sMaxAge": 86400
      },
      "/about": {
        "maxAge": 3600,
        "staleWhileRevalidate": 86400,
        "sMaxAge": 86400
      },
      "/archive": {
        "maxAge": 1800,
        "staleWhileRevalidate": 43200,
        "sMaxAge": 43200
      },
      "/posts/**": {
        "maxAge": 1800,
        "staleWhileRevalidate": 43200,
        "sMaxAge": 43200
      },
      "/_next/static/**": {
        "maxAge": 31536000,
        "immutable": true
      },
      "/images/**": {
        "maxAge": 86400,
        "sMaxAge": 604800
      },
      "/admin/**": {
        "maxAge": 0,
        "noStore": true
      },
      "/api/**": {
        "maxAge": 0,
        "noStore": true
      }
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
